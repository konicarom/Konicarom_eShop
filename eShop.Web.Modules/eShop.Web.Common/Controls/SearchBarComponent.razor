<div class="d-flex justify-content-center">
    <div class="mt-3 mb-3 row">
        <div class="col-auto align-items-center">
            <span for="filter" >Tìm kiếm:&nbsp;</span>
        </div>
        <div class="col-auto">
            <input type="text" placeholder="Nhập từ khóa cần tìm kiếm..." class="form-control" id="filter" @bind-value="filter" />
        </div>   
        <div class="col-auto">
            <button type="button" class="btn btn-success" @onclick="HandleSearch">Tìm kiếm</button>
        </div >
    </div>
</div>


<style>
    span{
        font-family: Roboto;
        font-size: 15px;
        font-weight: bold;
        color: #014235;
    }

    .align-items-center{
        align-self: center;
    }
</style>

@code {
    private string filter;

    [Parameter]
    public EventCallback<string> OnSearch{ get; set; }

    private void HandleSearch()
    {
        OnSearch.InvokeAsync(filter);
    }
}
