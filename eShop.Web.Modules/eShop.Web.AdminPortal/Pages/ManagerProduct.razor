@page "/productrequire"
@attribute [Authorize]
@inject NavigationManager navigationManager

<h3>Quản lý sản phẩm</h3>


@if (product != null)
{
    <EditForm Model="product" OnValidSubmit="HandleValidSubmit" class="form-line">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <ValidationSummary></ValidationSummary>

        <div class="form-group mb-3">
            <label for="id">Id</label>
            <InputNumber id="id" @bind-Value="product.ProductId" class="form-control"></InputNumber>
        </div>
        <div class="form-group mb-3">
            <label for="brand">Brand</label>
            <InputText id="brand" @bind-Value="product.Brand" class="form-control"></InputText>
        </div>
        <div class="form-group mb-3">
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="product.Name" class="form-control"></InputText>
        </div>
        <div class="form-group mb-3">
            <label for="price">Price</label>
            <InputNumber id="price" @bind-Value="product.Price" class="form-control"></InputNumber>
        </div>
        <div class="form-group mb-3">
            <label for="imagelink">Image Link</label>
            <InputText id="imagelink" @bind-Value="product.ImageLink" class="form-control"></InputText>
        </div>
        <div class="form-group mb-3">
            <label for="description">Description</label>
            <InputText id="description" @bind-Value="product.Description" class="form-control"></InputText>
        </div>

        <button type="submit" class="btn btn-success">Thêm</button>
    </EditForm>
}

@code {
    private ProductRequire product;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        product = new ProductRequire();
    }
    private void HandleValidSubmit()
    {
        navigationManager.NavigateTo($"/productinsert?Productid={product.ProductId}&Brand={product}&Name={product.Name}&Price={product.Price}&ImageLink={product.ImageLink}&Description={product.Description}", true);
    }
}
